const mongoose = require("mongoose");
const bcrypt = require("bcryptjs");
const User = require("./models/User"); // Adjust the path if needed
require("dotenv").config(); // Load MONGODB_URI from .env

const connectAndHash = async () => {
  try {
    await mongoose.connect(process.env.MONGODB_URI, {
      useNewUrlParser: true,
      useUnifiedTopology: true,
    });

    console.log("ğŸ”Œ Connected to MongoDB Atlas");

    const users = await User.find();

    for (const user of users) {
      if (!user.password.startsWith("$2b$")) {
        const hashed = await bcrypt.hash(user.password, 10);
        user.password = hashed;
        await user.save();
        console.log(`âœ… Hashed password for user: ${user.username}`);
      } else {
        console.log(`ğŸ”’ Already hashed: ${user.username}`);
      }
    }

    console.log("ğŸ‰ All applicable passwords hashed.");
    mongoose.connection.close();
  } catch (error) {
    console.error("âŒ Error:", error);
    mongoose.connection.close();
  }
};

connectAndHash();
