// Replace your entire send-order-email route with this:
router.post('/send-order-email', async (req, res) => {
  try {
    const { 
      to, 
      customerName, 
      orderNumber, 
      orderData, 
      isModification = false, 
      changes = [],
      brandDetails,
      fromEmail = 'ganguramonline@gmail.com'
    } = req.body;

    console.log(`üìß Processing email for order ${orderNumber} to ${to}`);

    // Validate required fields
    if (!to || !customerName || !orderNumber || !orderData) {
      return res.status(400).json({
        success: false,
        message: 'Missing required fields: to, customerName, orderNumber, and orderData are required'
      });
    }

    // Validate email format
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(to)) {
      return res.status(400).json({
        success: false,
        message: 'Invalid email format'
      });
    }

    // ‚úÖ FIXED: Create transporter with correct method name and proper error handling
    let transporter;
    try {
      transporter = nodemailer.createTransport({  // ‚úÖ Fixed method name
        service: 'gmail',
        auth: {
          user: 'ganguramonline@gmail.com',
          pass: process.env.EMAIL_APP_PASSWORD
        }
      });
      
      console.log('‚úÖ Email transporter created successfully');
    } catch (transporterError) {
      console.error('‚ùå Failed to create email transporter:', transporterError);
      return res.status(500).json({
        success: false,
        message: 'Email service configuration error',
        error: transporterError.message
      });
    }

    // Verify transporter configuration
    try {
      await transporter.verify();
      console.log('‚úÖ Email transporter verified successfully');
    } catch (verifyError) {
      console.error('‚ùå Email transporter verification failed:', verifyError);
      return res.status(500).json({
        success: false,
        message: 'Email authentication failed. Please check email credentials.',
        error: verifyError.message
      });
    }

    // Generate PDF
    console.log('üìÑ Generating PDF for order...');
    let pdfBuffer;
    try {
      pdfBuffer = await generateOrderPDF(orderData);
      console.log('‚úÖ PDF generated successfully');
    } catch (pdfError) {
      console.error('‚ùå PDF generation failed:', pdfError);
      return res.status(500).json({
        success: false,
        message: 'Failed to generate PDF',
        error: pdfError.message
      });
    }

    // Generate email content
    const emailContent = generateEmailContent(orderData, isModification, changes);

    // Email options
    const mailOptions = {
      from: {
        name: brandDetails?.displayName || 'Order Management',
        address: fromEmail
      },
      to: to,
      subject: emailContent.subject,
      text: emailContent.text,
      html: emailContent.html,
      attachments: [
        {
          filename: `${orderNumber}_Invoice.pdf`,
          content: pdfBuffer,
          contentType: 'application/pdf'
        }
      ]
    };

    // Send email
    console.log('üì§ Sending email...');
    const info = await transporter.sendMail(mailOptions);

    console.log('‚úÖ Email sent successfully:', info.messageId);

    res.status(200).json({
      success: true,
      message: isModification ? 'Order update email sent successfully' : 'Order confirmation email sent successfully',
      messageId: info.messageId,
      orderNumber,
      recipient: to
    });

  } catch (error) {
    console.error('‚ùå Email sending error:', error);
    
    let errorMessage = 'Failed to send email';
    let statusCode = 500;
    
    if (error.code === 'EAUTH') {
      errorMessage = 'Email authentication failed. Please check email credentials.';
      statusCode = 401;
    } else if (error.code === 'ENOTFOUND') {
      errorMessage = 'Email service not found. Please check internet connection.';
      statusCode = 503;
    } else if (error.responseCode === 550) {
      errorMessage = 'Invalid recipient email address.';
      statusCode = 400;
    } else if (error.code === 'EMESSAGE') {
      errorMessage = 'Email message format error.';
      statusCode = 400;
    }

    res.status(statusCode).json({
      success: false,
      message: errorMessage,
      error: process.env.NODE_ENV === 'development' ? error.message : 'Internal server error',
      orderNumber: req.body.orderNumber
    });
  }
});

